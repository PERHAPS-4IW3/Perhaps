{% extends "base.html.twig" %}

{% block title %}{{ projet.nomProjet }}{% endblock %}

{% block body %}
    <div class="jumbotron">
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <h1>{{ projet.nomProjet }}</h1>
                    <h4>{{ projet.descriptionProjet | nl2br }}</h4>
                    <div class="text-primary" style="font-weight: bold; font-size: 2rem;">{{ projet.budget | number_format(0, '', ' ') }} €</div>

                    {% if is_granted('ROLE_FREELANCER') %}
                        <a href="#" class="btn btn-primary">Postuler</a>
                    {% endif %}

                </div>
            </div>
        </div>
    </div>
    <div class="container mt-4">
        <div class="row">
            <div class="col-md-8">
                <table class="table table-striped">
                    <tr>
                        <th>Nom du Projet</th>
                        <td> {{ projet.nomProjet }}</td>
                    </tr>
                    <tr>
                        <th>Déscription</th>
                        <td> {{ projet.descriptionProjet}}</td>
                    </tr>
                    <tr>
                        <th>Publié le</th>
                        <td> {{ projet.createdAt|date("m/d/Y") }}</td>
                    </tr>
                    <tr>
                        <th>Budget indicatif</th>
                        <td>{{ projet.budget | number_format(0, '', ' ') }} €</td>
                    </tr>
                </table>
            </div>
            <div class="col-md-4">
                <h3 class="text-secondary"> Offres pour ce projet :</h3>
                <div class="col-lg-12 d-flex align-items-stretch mt-4" id="cardprj">
                    <div class="card h-100">
                        <div class="card-body">
                            <h5 class="card-title">
                                <a href="{{ path('projet_show', {id: projet.id, slug: projet.slug}) }}">{{ projet.nomProjet }}</a>
                            </h5>
                            <p class="card-text">
                                {{ projet.descriptionProjet }}
                            </p>
                            <div class="text-primary">
                                {{ projet.budget | number_format(0, '', ' ') }} €
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}