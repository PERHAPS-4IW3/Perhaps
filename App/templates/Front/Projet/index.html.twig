{% extends "base.html.twig" %}

{% block title %}Projets{% endblock %}

{% block body %}
    <div class="jumbotron">
        <div class="container">
            {{ form_start(form) }}
            <div class="form-row">
                <div class="col">
                    {{ form_row(form.nomProjet) }}
                </div>
                <div class="col">
                    {{ form_row(form.submit) }}
                </div>
            </div>
            {{ form_end(form) }}
        </div>
    </div>
    <div class="container mt-4">

        <h1>Nos Projets</h1>
        </br>
        {% for projet in projets %}
            <div class="card mb-4">
                <div class="card-body">
                    <h5 class="card-title">
                        <a href="{{ path('projet_show', {id: projet.id, slug: projet.slug}) }}">{{ projet.nomProjet }}</a>
                    </h5>
                    <p class="card-text">
                        {{ projet.descriptionProjet | nl2br}}
                    </p>
                    <div class="text-primary" style="font-size:2rem; font-weight: bold">
                        {{ projet.budget | number_format(0, '', ' ') }} â‚¬
                    </div>
                </div>
            </div>
        {% endfor %}

        <div class="navigation">
            {{ knp_pagination_render(projets) }}
        </div>
    </div>
{% endblock %}