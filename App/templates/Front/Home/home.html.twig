{% extends "base.html.twig" %}

{% block title %}Perhaps{% endblock %}

{% block body %}
    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
            <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
        </ol>
        <div class="carousel-inner">
            <div class="carousel-item">
                <img class="d-block w-100" src="images/slide3.jpg" alt="First slide">
                <div class="carousel-caption d-none d-md-block" id="jamb">
                    <h1>Perhaps</h1>
                    <h2>L'application qui vous aide à gérer votre projet !</h2>
                    <p>Un module de gestion de projet est disponible pour mener à bien votre projet !</p>
                </div>
            </div>
            <div class="carousel-item active">
                <img class="d-block w-100" src="images/slider2.jpg" alt="Second slide">
                <div class="carousel-caption d-none d-md-block">
                    <div class="jumbotron text-center" id="jamb">
                        <h1>Perhaps</h1>
                        <h2>Trouvez un freelance qualifié et disponible !</h2>
                        <p>Bienvenue sur notre site ! Inscrivez-vous et déposez gratuitement vos projets !</p><br>
                        <p>La plateforme de mise en relation entre les Freelances et les Porteurs de Projets !</p>
                    </div>
                </div>
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" src="images/slider1.jpg" alt="Third slide">
                <div class="carousel-caption d-none d-md-block">
                    <div class="jumbotron text-center text-black-50" id="jamb">
                        <h1>Perhaps</h1>
                        <h2>En tant que porteur de projet !</h2>
                        <p>Choisissez le(s) Freelancer(s) qui vous conviennent !</p><br>
                        <p>On vous propose des notations pour vous aider à choisir !</p>
                    </div>
                </div>
            </div>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>

    <div class="container-fluid jumbotron" id="home-div">
        <div class="row justify-content-center align-items-center">
            <img src="images/trophy.svg" id="trophy"><h3 id="h3">De nombreux projets et une communauté de Freelancer actif !</h3>
        </div>
    </div>

    <div class="container" id="page1cont">
        <h2>Les derniers Projets</h2>
        {% for label, messages in app.flashes(['success', 'danger', 'warning']) %}
            {% for message in messages %}
            <div class="alert alert-{{ label }}">
                {{ message }}
            </div>
            {% endfor %}
        {% endfor %}
        <div class="row flex">
            {% for projet in projets %}
                <div class="col-lg-4 d-flex align-items-stretch" id="cardprj">
                    <div class="card h-100">
                        <div class="card-body">
                            <h5 class="card-title">
                                <a href="{{ path('projet_show', {id: projet.id, slug: projet.slug}) }}">{{ projet.nomProjet }}</a>
                            </h5>
                            <p class="card-text">
                                {{ projet.descriptionProjet }}
                            </p>
                            <div class="text-primary">
                                {{ projet.budget | number_format(0, '', ' ') }} €
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}