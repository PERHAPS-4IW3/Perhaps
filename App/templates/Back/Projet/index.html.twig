{% extends "base.html.twig" %}

{% block title %}Gérer mes projets{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h2>Gérer mes biens</h2>
        <div class="row flex">
            {% for projet in projets %}
                <div class="col-3">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">
                                {{ projet.nomProjet }}
                            </h5>
                            <p class="card-text">
                                {{ projet.descriptionProjet }}
                            </p>
                            <div class="text-primary">
                                {{ projet.budget | number_format(0, '', ' ') }} €
                            </div>
                            <a href="{{ path('back_projet_edit', {id: projet.id}) }}" class="btn btn-secondary">Éditer</a>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}