{% extends 'base.html.twig' %}

{% block title %}User index{% endblock %}



{% block body %}


    {% if app.user %}
        <div class="container">
        <h1>Vos informations personnelles</h1>
        <form>
            <div class="form-row">
                <div class="form-group col-md-4">
                <label for="inputFirstName">PRENOM</label>
                <input type="text" class="form-control" id="inputPrenom" placeholder={{ app.user.prenomUser }} readonly>
                </div>
                <div class="form-group col-md-4">
            <label for="inputName">NOM</label>
            <input type="text" class="form-control" id="inputNom" placeholder={{ app.user.nomUser }} readonly>
                </div>
            </div>
                <div class="form-group col-md-8">
                    <label for="inputAddress">ADRESSE</label>
                    <input type="text" class="form-control" id="inputAddress" placeholder={{ app.user.adresseUser }} readonly>
                </div>
                <div class="form-row">
                    <div class="form-group col-md-6">
            <label for="inputCity">VILLE</label>
            <input type="text" class="form-control" id="inputCity" placeholder={{ app.user.ville }} readonly>
                    </div>
                    <div class="form-group col-md-4">
            <label for="inputState">PAYS</label>
            <input type="text" class="form-control" id="inputState" placeholder={{ app.user.pays }} readonly>
                    </div>
                    <div class="form-group col-md-2">
                        <label for="inputZip">CODEPOSTALE</label>
                        <input type="text" class="form-control" id="inputZip" placeholder={{ app.user.codePostalUser }} readonly>
                    </div>
                </div>

            <a href="{{ path('user_edit', {id: app.user.id}) }}" class="btn btn-primary">Modifier mes informations</a>
            <a href="{{ path('user_delete', {id: app.user.id, '_token': csrf_token('user_delete')}) }}" class="btn btn-danger" onclick="return confirm('Etes-vous sÃ»r ?')">Supprimer</a>
        </form>
        </div>
    {% else %}
        no records found
    {% endif %}

{% endblock %}