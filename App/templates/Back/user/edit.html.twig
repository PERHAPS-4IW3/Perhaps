{% extends 'base.html.twig' %}

{% block title %}Modification des informations{% endblock %}

{% block body %}

    <div class="container">
        <h1>Modification des informations personnelles</h1>

        {{ include('Back/user/_form.html.twig', {'button_label': 'Update'}) }}
        <div class="">
        <a href="{{ path('user_index' , {id: app.user.id}) }}" class="btn btn-secondary">Revoir mes informations</a>

            <form method="post" action="{{ path('user_delete', {'id': user.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
                <input type="hidden" name="_method" value="DELETE">
                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ user.id) }}">
                <button class="btn btn-danger">Supprimer</button>
            </form>
        </div>
    </div>
{% endblock %}
